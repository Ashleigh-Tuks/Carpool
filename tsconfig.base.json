{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@carpool/api/authentication/entities": [
        "libs/api/authentication/api/shared/entities/data-access/src/index.ts"
      ],
      "@carpool/api/authentication/repository": [
        "libs/api/authentication/repository/data-access/src/index.ts"
      ],
      "@carpool/api/authentication/resolvers": [
        "libs/api/authentication/api/feature/src/index.ts"
      ],
      "@carpool/api/authentication/service": [
        "libs/api/authentication/service/feature/src/index.ts"
      ],
      "@carpool/api/prisma": [
        "libs/api/shared/services/prisma/data-access/src/index.ts"
      ],
      "@carpool/api/shell": ["libs/api/shell/feature/src/index.ts"],
      "@carpool/client/components": ["libs/client/components/src/index.ts"],
      "@carpool/client/pages": ["libs/client/pages/src/index.ts"],
      "@carpool/client/store": ["libs/client/store/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
